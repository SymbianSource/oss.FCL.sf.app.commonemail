// r_esmr_attd_view_from_mail
// ES MR Policy forviewing MR from Email application
// ---------------------------------------------------------------------------
//
RESOURCE ESMR_POLICY r_esmr_attd_view_from_mail
    {
    event_type           = EESMREventTypeAppt;
    policy_id            = EESMRPolicyReceiveMRFromEmail;
    policy_mode          = EESMRViewMR;
    role_flags           = KEESMRFlagRequiredAttendee |
                           KEESMRFlagOptionalAttendee |
                           KEESMRFlagNonParticipant;
    allowed_app          = KEESMRFlagAppEsEmail;
    field_ids            = r_esmr_attd_view_mail_fields;
    default_commands     = r_esmr_attd_view_from_mail_def_commands;
    additional_commands  = 0; // No additional commands
