// ---------------------------------------------------------------------------
// r_bccal_anniversary_viewer
// Calendar Entry UI Policy for viewing anniversary from calendar application
// ---------------------------------------------------------------------------
//
RESOURCE ESMR_POLICY r_bccal_anniversary_viewer
    {
    event_type           = EESMREventTypeEAnniv;
    policy_id            = EESMRPolicyAnniversaryViewer;
    policy_mode          = EESMRViewMR;
    role_flags           = KEESMRFlagOrganizer;
    allowed_app          = KEESMRFlagAppEsCalendar;
    field_ids            = r_bccal_anniversary_viewer_fields;
    default_commands     = r_bccal_anniversary_viewer_def_commands;
    additional_commands  = 0;
    }

