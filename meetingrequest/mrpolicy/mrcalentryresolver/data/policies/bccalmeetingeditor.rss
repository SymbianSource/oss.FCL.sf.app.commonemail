// r_esmr_organizer_edit_from_calendar
// BC Cal Event plugin Policy for editing meeting from calendar application
// ---------------------------------------------------------------------------
//
RESOURCE ESMR_POLICY r_bccal_meeting_editor
    {
    event_type           = EESMREventTypeAppt;
    policy_id            = EESMRPolicyMeetingEditor;
    policy_mode          = EESMREditMR;
    role_flags           = KEESMRFlagOrganizer;
    allowed_app          = KEESMRFlagAppEsCalendar;
