// ---------------------------------------------------------------------------
// r_bccal_memo_editor
// BC Cal Event plugin policy for editing memo from calendar application
// ---------------------------------------------------------------------------
//
RESOURCE ESMR_POLICY r_bccal_memo_editor
    {
    event_type           = EESMREventTypeEEvent;
    policy_id            = EESMRPolicyMemoEditor;
    policy_mode          = EESMREditMR;
    role_flags           = KEESMRFlagOrganizer;
    allowed_app          = KEESMRFlagAppEsCalendar;
    field_ids            = r_bccal_memo_editor_fields;
    default_commands     = r_bccal_memo_editor_def_commands;
    additional_commands  = 0;
    }

